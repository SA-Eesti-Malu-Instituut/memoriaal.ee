.emem-nupp-aktiivne
.emem-nupp-aktiivne:hover
    color var(--emem-nuputekst)
    background-color var(--emem-nupp-aktiivne)
.emem-nupp-aktiivne:hover
    color var(--emem-nuputekst)
    background-color var(--emem-nupp-hover)
.emem-v2ljataust
    color var(--emem-v2ljatekst)
    background-color var(--emem-v2ljataust)
.emem-v2ljatekst
    color var(--emem-v2ljataust)
    background-color var(--emem-v2ljatekst)
