// paletikonstandid
:root
    --emem-valge #f9f7fa
    --emem-tekst #562948
    --emem-nuputaust #310202
    --emem-nuputekst #d09dc0
    --emem-nupp-aktiivne #8000ff
    --emem-nupp-hover #460000
    --emem-v2ljataust #b71b1b
    --emem-v2ljatekst #26190a
