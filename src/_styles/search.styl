#search-results
    color hsl(0, 0%, 78%)
    background hsla(0, 0%, 8%, 0.7)

    h3
        font-size 14pt
        line-height 16pt

    button
        background hsl(0, 0%, 2%)
        color white

    a
        color hsl(0, 0%, 78%)

    hr
        border none
        border-top 1px solid hsl(0, 0%, 78%)

    .search-result:hover
        .search-result-feedback
            transform: translateX(0)

    .search-result
        p
            font-weight 700
            font-size 11pt
            line-height 12pt

        .search-result-name
            border-bottom 1px solid hsl(0, 0%, 78%)
            background-color black

        .search-result-feedback
            text-transform lowercase
            text-decoration underline
            cursor pointer
            transition 0.3s
            transform: translateX(-100%)

        .search-result-info
            label {
                border-bottom: 1px solid #c7c7c7;
                margin: 0.5rem 0rem;
                padding-right: 1rem;
                font-family: 'Montserrat', sans-serif;
                font-style: normal;
                font-weight: 400;
            }
            p
                font-size 9pt
                line-height 10pt
                font-weight 400

            span
                font-style italic

        .search-result-plaque
            .plaque-info
                font-weight 700
                font-size 34pt
                line-height 38pt
                white-space nowrap

                @media (max-width: 576px)
                    font-size 20pt
                    line-height 22pt

        .obsolete
            background-color: hsla(0, 100, 82, .35)
            padding-top: 0.5rem;

        .labels {
            span {
                padding: 6px;
                margin-left: 5px;
                color: black;
                border-top-left-radius: 5px;
                border-top-right-radius: 5px;
            }
            .emem {
                color: white;
                background-color: hsl(239, 35%, 39%);
            }
            .evo {
                background-color: hsl(173, 70%, 35%);
            }
            .refugee {
                background-color: hsl(59, 100%, 75%);
            }
            .kivi {
                color: white;
                background-color: hsl(23, 78%, 7%);
            }
        }

    .mitterelevantne
        background-color hsla(104, 33%, 33%, 0.5)

    .nonperson
        background-color hsl(351, 52%, 43%)


#db-feedback
    input
    textarea
        background transparent
        border-bottom 1px solid hsl(0, 0%, 50%)
