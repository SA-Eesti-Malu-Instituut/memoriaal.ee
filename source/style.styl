html
body
    height 100%

body
    background-repeat no-repeat
    background-size cover
    overflow hidden
    color rgb(255, 255, 255)

h1
    font-size 5em
    font-weight bold
    text-transform uppercase

h2
    font-size 1em
    font-weight bold

p
    font-size .9em
    line-height 1em

a
a:active
a:hover
a:visited
    color rgb(255, 255, 255)

#text
#text-links
    height 300px
    color rgb(255, 255, 255)
    background rgba(20, 20, 20, .7)
    overflow auto
    text-transform uppercase

#text-links
    font-weight bold

#navigation
    background rgb(77, 77, 79)
    text-transform uppercase

    a
        color rgba(20, 20, 20, .5)

        &:hover
            color rgba(20, 20, 20, .7)
            text-decoration none

            img
                filter grayscale(0%)

        &.active
            color rgba(255, 255, 255, .5)
            background rgb(65, 64, 66)
            text-decoration none

            img
                filter grayscale(0%)


    img
        filter grayscale(100%)
        height 100px

    p
        font-size .5em
