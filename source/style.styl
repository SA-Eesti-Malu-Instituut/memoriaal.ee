html
body
    height 100%

body
    background-repeat no-repeat
    background-size cover
    overflow hidden
    color rgb(255, 255, 255)

h1
    font-size 5em
    font-weight bold
    text-transform uppercase

h2
    font-size 1em
    font-weight bold

p
    font-size 0.9em
    line-height 1em

a
a:active
a:hover
a:visited
    color rgb(255, 255, 255)

#text
#text-links
    height 300px
    color rgb(255, 255, 255)
    background rgba(20, 20, 20, 0.7)
    overflow auto
    text-transform uppercase

#text-links
    font-weight bold

#navigation
    background rgb(77, 77, 79)
    text-transform uppercase

    a:hover
        text-decoration none

    a.active
        background rgb(65, 64, 66)
        text-decoration none

    img
        height 100px

    p
        font-size 0.5em
