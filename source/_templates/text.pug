#text.container-fluid(style={ 'background-image': `url(${self.pictures[0]})` })
    .row
        h2.col-11.mt-3.mb-0
            if self.title !== self.siteTitle
                a(href=self.root)= self.siteTitle
            else
                br
        #text-locale.col-1.mt-3.mb-0.text-right
            - var i = 0
            each url, locale in self.otherLocalePaths
                if i > 0
                    span /
                a.px-2(href=url)= locale
                - i++
        h1.col-12.mt-4
            a(href=self.path)= self.title
    .row.mt-5
        block content
            #text-text.col-4.pt-3.pb-2.mr-1
                each c, idx in self.content
                    .text-block.d-none(id=c.id)
                        +markdown(c.text)
            if self.content.length > 1
                #text-links.col-5.py-3
                    each c in self.content
                        if c.id
                            a.pb-2.text-link.d-block(href='#' + c.id)= c.title
            .col.col-md-4.col-lg-3.col-xl-2
                #text-search.row
                    .col.py-3
                        +markdown(self.search.text)
                        form.form(action=self.search.url, method='GET')
                            input.col-8(type='search', name='q', placeholder=self.search.placeholder)
                            button.col-4= self.search.button
