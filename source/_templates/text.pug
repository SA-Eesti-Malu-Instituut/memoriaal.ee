block text
    .row.mt-5
        #text.col-4.pt-3.pb-2.mr-1
            each c, idx in self.content
                .text-block.d-none(id=c.id)
                    +markdown(c.text)
        if self.content.length > 1
            #text-links.col-4.py-3
                each c in self.content
                    a.text-link.d-block(href='#' + c.id)= c.title
        .col-2
            #text-search.row
                .col.py-3
                    +markdown(self.search.text)
                    form.form
                        input.col-8(type='search', placeholder=self.search.placeholder)
                        button.col-4= self.search.button
