block vars


mixin markdown(text)
    | !{ self.md(text) }


doctype html
html(lang=self.locale)
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(property='og:url', content='https://www.memoriaal.ee' + self.path)
        meta(property='og:title', content=self.title ? self.title + ' · ' + self.siteTitle : self.siteTitle)
        meta(property='og:image', content=self.image)
        meta(property='og:description', content=self.description)

        title= self.title ? self.title + ' · ' + self.siteTitle : self.siteTitle

        link(href='/assets/css/bootstrap.min.css', rel='stylesheet')
        link(href='/style.css', rel='stylesheet')

        script.
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
            //- ga('create', 'UA-XXXXXX-YY', 'auto');
            ga('send', 'pageview');


    body(style={ 'background-image': `url(${self.pictures[0]})` })
        .container-fluid
            .row
                if self.title !== self.siteTitle
                    h2.col-12.mt-3.mb-0
                        a(href=self.root)= self.siteTitle
                h1.col-12.mt-4
                    a(href=self.path)= self.title

            include text.pug
            include navigation.pug

        block script

        script(src='/script.js')
