#navigation
    background rgb(38, 38, 38)

    a
        color rgb(10, 10, 10)
        text-decoration none

        &:hover
            color rgb(115, 115, 115)
            text-decoration none

            img
                filter grayscale(0%)

        &.active
            color rgb(115, 115, 115)
            background rgb(5, 5, 5)

            img
                filter grayscale(0%)

        h3
            font-size 11pt

        img
            filter grayscale(100%)
            height 100px

        p
            font-size 8pt
            line-height 10pt
