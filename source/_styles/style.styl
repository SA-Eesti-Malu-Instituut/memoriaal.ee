html
body
    height 100%

body
    background-repeat no-repeat
    background-size cover
    color rgb(255, 255, 255)
    text-transform uppercase

h1
h2
h3
    font-weight bold
    text-shadow 0 0 16px rgba(77, 77, 79, .4)

    a
    a:active
    a:hover
    a:visited
        text-decoration none

h1
    font-size 66pt

h2
    font-size 20pt

h3
    font-size 11pt

p
    margin-bottom .5rem

a
a:active
a:hover
a:visited
    color rgb(255, 255, 255)

.container-fluid
    padding-bottom 300px

#text
#text-links
    color rgb(199, 199, 199)
    background rgba(20, 20, 20, .7)
    font-size 14pt
    line-height 16pt

#text-links
    font-weight bold

    a.active
        color rgb(218, 56, 50)

#navigation
    background rgb(38, 38, 38)

    a
        color rgb(10, 10, 10)

        &:hover
            color rgb(115, 115, 115)
            text-decoration none

            img
                filter grayscale(0%)

        &.active
            color rgb(115, 115, 115)
            background rgb(5, 5, 5)
            text-decoration none

            img
                filter grayscale(0%)

        img
            filter grayscale(100%)
            height 100px

        p
            font-size 8pt
            line-height 10pt
