#search
    color rgb(199, 199, 199)
    background rgba(20, 20, 20, .7)

    h3
        font-size 14pt
        line-height 16pt

    button
        background rgb(6, 6, 6)
        color rgb(255, 255, 255)

    .search-result
        border-top 1px solid rgb(199, 199, 199)

        p
            font-weight 700
            font-size 11pt
            line-height 12pt

        .search-result-info
            p
                font-size 9pt
                line-height 10pt
                font-weight 400

            span
                font-style italic
